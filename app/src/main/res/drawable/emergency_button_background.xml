<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/emergency_red_dark"
                android:endColor="@color/emergency_red"
                android:angle="45" />
            <corners android:radius="20dp" />
            <stroke
                android:width="3dp"
                android:color="@color/emergency_red_light" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/emergency_red"
                android:endColor="@color/emergency_red_light"
                android:angle="45" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="@color/emergency_red_dark" />
        </shape>
    </item>
</selector>
