<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive emergency data from cloud backup -->
        <exclude domain="sharedpref" path="emergency_contacts.xml"/>
        <exclude domain="sharedpref" path="emergency_preferences.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer of non-sensitive data -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="emergency_contacts.xml"/>
        <exclude domain="sharedpref" path="emergency_preferences.xml"/>
    </device-transfer>
</data-extraction-rules>
